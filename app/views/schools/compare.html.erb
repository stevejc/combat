<h3>Search Results</h3>

<table class="table">
<tr>
  <td>School</td>
  <% @schools.each do |school| %>
    <td><%= school.name %>  
    <%= link_to (content_tag(:i, "", :class=>"icon-remove")), remove_school_path(:school_id => school.id), title: 'Remove from comparison!', rel: 'tooltip', class: "remove-school" %></td>
  <% end %>
</tr>
<tr>
  <td>Location</td>
  <% @schools.each do |school| %>
    <td><%= school.city %>, <%= school.state %></td>
  <% end %>
</tr>
<tr>
  <td>Type</td>
  <% @schools.each do |school| %>
    <td><%= school.school_type %></td>
  <% end %>
</tr>
<tr>
  <td>Population</td>
  <% @schools.each do |school| %>
    <td><%= school.population %></td>
  <% end %>
</tr>
<tr>
  <td>Setting</td>
  <% @schools.each do |school| %>
    <td><%= school.setting %></td>
  <% end %>
</tr>
<tr>
<td><b>Veteran Services:</b></td>
<% @schools.each do |school| %>
  <td></td>
<% end %>
</tr>
<tr>
  <td>GI Bill Accredited</td>
  <% @schools.each do |school| %>
    <td><%= offers_benefits(school.gi_bill_accredited) %></td>
  <% end %>
</tr>
<tr>
  <td>Yellow Ribbon Participant</td>
  <% @schools.each do |school| %>
    <td><%= offers_benefits(school.yellow) %></td>
  <% end %>
</tr>
<tr>
  <td>Veteran Affairs Office</td>
  <% @schools.each do |school| %>
    <td><%= offers_benefits(school.vet_affairs) %></td>
  <% end %>
</tr>
<tr>
  <td>Scholarship for Veterans</td>
