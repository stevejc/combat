</tr>
<tr>
  <td>Veteran Clubhouse</td>
  <% @schools.each do |school| %>
    <td><%= offers_benefits(school.vet_clubhouse) %></td>
  <% end %>
</tr>
<tr>
  <td>Mentor Programs</td>
  <% @schools.each do |school| %>
