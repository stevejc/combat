<h1><%= @blog.title %></h1>
<p><%= @blog.article %></p>
<p>Posted On: <%= @blog.created_at %></p>


<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'Edit Blog Post', edit_blog_path(@blog), :class => 'btn btn-warning' %>
<% end %>
<%= link_to 'Back', blogs_path, :class => 'btn', :id => 'back' %>
